{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "fwd/text-header",
	"title": "Text Header",
	"description": "A simple block with a heading, paragraph, and button",
	"category": "fwd",
	"icon": "text-page",
	"keywords": [
		"text",
		"paragraph",
		"heading"
	],
	"attributes": {
		"align": {
			"type": "string",
			"default": "none"
		}
	},
	"supports": {
		"align": ["wide", "full"],
		"anchor": true,
		"html": false,
		"spacing": {
			"margin": [ "top", "bottom" ]
		}
	},
	"textdomain": "fwd-plugin",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
